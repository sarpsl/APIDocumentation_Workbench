{
    "crawling": {
        "start_url": "https://bookshelf.erwin.com/bookshelf/15.0DIBookshelf/Content/Home.htm",
        "max_pages": 50,
        "delay_seconds": 1,
        "skip_extensions": [".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", 
                           ".zip", ".rar", ".tar", ".gz", ".jpg", ".jpeg", ".png", ".gif", 
                           ".bmp", ".svg", ".mp3", ".mp4", ".avi", ".mov", ".css", ".js"]
    },
    "data_processing": {
        "chunk_max_length": 500,
        "min_chunk_length": 50,
        "min_content_length": 100
    },
    "training": {
        "model_name": "HuggingFaceTB/SmolLM2-360M-Instruct",
        "output_dir": "./fine_tuned_qa_model",
        "num_train_epochs": 3,
        "per_device_train_batch_size": 2,
        "per_device_eval_batch_size": 2,
        "max_length": 512,
        "warmup_steps": 100,
        "logging_steps": 50,
        "save_steps": 500,
        "eval_steps": 500,
        "test_size": 0.1
    },
    "generation": {
        "max_new_tokens": 150,
        "temperature": 0.7,
        "top_p": 0.9,
        "do_sample": true
    },
    "output_files": {
        "crawled_pages": "datasets/website/crawled_pages.json",
        "qa_pairs": "datasets/website/qa_pairs.json",
        "training_logs": "datasets/website/training_logs.txt"
    }
}
